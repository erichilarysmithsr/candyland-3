<header class="top-bar">
    <div class="contain">
        <a class="home-link" href="/">Home</a>
        <h1>{{bot.name}}</h1>
    </div>
</header>

<section class="contain">
    <div class="bot-options">
        <h2>Bot Options</h2>
        <div class="options-form">
            <form action="bot" method="POST">
                <ul class="fields">
                    <li><label for="botName">Bot Name:</label></li>
                    <li><input type="text" id="bot-name" name="botName" value="{{bot.name}}" disabled="disabled"></li>

                    <li><label for="targetSite">Target Website:</label></li>
                    <li><input type="text" id="target-site" name="targetSite" value="{{bot.target}}" disabled="disabled"></li>

                    <li><label for="waitTime">Wait Minutes:</label></li>
                    <li><input type="text" id="wait-time" name="waitTime" value="{{bot.idle}}" disabled="disabled"></li>

                    <li><label for="searchQueries">Search Queries:</label></li>
                    <li><textarea type="text" id="search-queries" name="searchQueries" disabled="disabled">{{bot.queries}}</textarea></li>

                    <li><button class="edit-btn">Edit</button> <button class="update-btn" type="submit" disabled="disabled">Update</button></li>
                </ul>
            </form>

            <div class="result"></div>
        </div>

        <div class="instances">
            {{instances}}
        </div>
    </div>

    <div class="bot-stats">
        <h2>Bot Stats</h2>
        <ul class="accordion-tabs">
            <li class="tab-header-and-content">
                <a href="#" class="is-active tab-link">Current</a>
                <div class="tab-content">
                    <ul class="stats">
                        <li>Runs: <strong>{{bot.runs}}</strong></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
            </li>
            <li class="tab-header-and-content">
                <a href="#" class="tab-link">Lifetime</a>
                <div class="tab-content">
                    <ul class="stats">
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
            </li>
        </ul>

    </div>
</section>

<section class="bot-log">
    <h2>Bot Log</h2>
    <ul class="logs">
        {{#each log}}
            <li><span {{#if this.status}}style="color: red;"{{/if}} class="run">{{this.run}}</span> <span class="meta">{{this.time}}:</span> <span class="message">{{this.message}}</span></li>
        {{/each}}
    </ul>
</section>